[Unit]
Description=Rover Video Publisher (libcamera -> SRT)
After=network-online.target roverd.service audio-capture.service
Wants=network-online.target audio-capture.service

[Service]
Type=simple
User=roverd
Group=roverd
WorkingDirectory=/var/lib/roverd
EnvironmentFile=/var/lib/roverd/video.env
ExecStart=/usr/local/bin/video-publisher
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
